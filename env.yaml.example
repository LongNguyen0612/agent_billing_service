# billing_service configuration
DB_URI: "postgresql+asyncpg://postgres:postgres@localhost:5433/billing"
MIGRATION_DB_URI: "postgresql://postgres:postgres@localhost:5433/billing"
REDIS_URL: "redis://localhost:6380/0"
CACHE_BACKEND: "redis"
CORS_ORIGINS: ["http://localhost:3000"]
API_PREFIX: "/api"
API_PORT: 8002
API_HOST: "0.0.0.0"
CORS_ALLOW_CREDENTIALS: true
LOG_LEVEL: "INFO"
ENABLE_LOGGING_MIDDLEWARE: 1
AUTH_DISABLED: false
ENABLE_SENTRY: 0
DSN_SENTRY: ""
SENTRY_ENVIRONMENT: "dev"

# Abnormal Usage Detection (UC-37)
ANOMALY_HOURLY_THRESHOLD: 100.0
ANOMALY_DAILY_THRESHOLD: 500.0
ANOMALY_DETECTION_ENABLED: true
ANOMALY_NOTIFICATION_WEBHOOK: ""

# Monthly Allocation (UC-38)
MONTHLY_ALLOCATION_ENABLED: true
MONTHLY_ALLOCATION_CREDIT_PRICE: 0.015
MONTHLY_ALLOCATION_RUN_DAY: 1

# Ledger Reconciliation (UC-40)
RECONCILIATION_ENABLED: true
RECONCILIATION_INTERVAL_SECONDS: 86400
