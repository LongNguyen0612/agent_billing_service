# billing_service Docker configuration
DB_URI: "postgresql+asyncpg://postgres:postgres@billing_postgres:5432/billing_service"
MIGRATION_DB_URI: "postgresql://postgres:postgres@billing_postgres:5432/billing_service"
REDIS_URL: "redis://billing_redis:6379/0"
CACHE_BACKEND: "redis"
CORS_ORIGINS: ["http://localhost:3000","http://localhost:8001"]
API_PREFIX: "/api"
API_PORT: 8000
API_HOST: "0.0.0.0"
CORS_ALLOW_CREDENTIALS: true
LOG_LEVEL: "INFO"
ENABLE_LOGGING_MIDDLEWARE: 1
AUTH_DISABLED: false
ENABLE_SENTRY: 0
DSN_SENTRY: ""
SENTRY_ENVIRONMENT: "dev"
